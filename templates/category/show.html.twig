{% extends "base.html.twig" %}

{% block title %}
	{{ category.name }}
{% endblock %}

{% block body %}

	<div class="row">
		<div class="col-sm-3">
			<div class="card">
				<div class="card-body">
					<h4>
						<div class="card-title">
							{{ category.name }}</div>
					</h4>
					<div class="card-text">
						Test
					</div>
					<a href=" {{ path('category_edit', {'id': category.id }) }} " class="btn btn-primary btn-sm">Modifier</a>
					<a href=" {{ path('category_delete', {'id': category.id }) }} " class="btn btn-danger btn-sm">Supprimer</a>
					<a href=" {{ path('category_showAll') }} " class="btn btn-info btn-sm">Retour</a>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
