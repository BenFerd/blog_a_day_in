{% extends "base.html.twig" %}

{% block title %}
	Catégories
{% endblock %}

{% block body %}

	<div class="row">
		{% for c in categories %}
			<div class="col-sm-3">
				<div class="card">
					<div class="card-body">
						<h4>
							<div class="card-title">
								{{ c.name }}</div>
						</h4>
						<div class="card-text">
							Test
						</div>
						<a href=" {{ path('category_edit', {'id': c.id }) }} " class="btn btn-primary btn-sm">Modifier</a>
						<a href=" {{ path('category_showOne', {'id': c.id }) }} " class="btn btn-info btn-sm">Détails</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>

{% endblock %}
